   delete-five-chars-backward() {
     local n=${NUMERIC:-5}
     while (( n-- > 0 )); do
       zle backward-delete-char
     done
   }
   zle -N delete-five-chars-backward

   # Привязка Ctrl+E к функции удаления 5 символов
